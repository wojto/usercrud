{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <h3 class="col-md-12">
                {{ 'user_list'|trans }}
            </h3>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="col-md-4">
                        {{ 'name'|trans }}
                    </th>
                    <th class="col-md-4">
                        {{ 'role'|trans }}
                    </th>
                    <th class="col-md-2 text-center">
                        {{ 'add_date'|trans }}
                    </th>
                    <th class="col-md-2 text-center">
                        {{ 'actions'|trans }}
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td class="col-md-4">
                            {{ user.name }}
                        </td>
                        <td class="col-md-4">
                            {{ user.role.name }}
                        </td>
                        <td class="col-md-2 text-center">
                            {{ user.created|date('Y-m-d H:i') }}
                        </td>
                        <td class="col-md-2 text-center actions">
                            <a href="{{ path('admin_user_update', {'userId': user.id}) }}">
                                <i class="fa fa-pencil" title="{{ 'update_user_small_button_label'|trans }}"></i>
                            </a>
                            <a href="{{ path('admin_user_delete', {'userId': user.id}) }}">
                                <i class="fa fa-remove" title="{{ 'delete_user_small_button_label'|trans }}"></i>
                            </a>
                            <a href="{{ path('admin_user_view', {'userId': user.id}) }}">
                                <i class="fa fa-eye" title="{{ 'view_user_small_button_label'|trans }}"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <td colspan="4" class="col-md-12">{{ 'no_users_found'|trans }}</td>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="4" class="col-md-12">{{ 'number_of_users'|trans }}: {{ users.getTotalItemCount }}</th>
                </tr>
                </tfoot>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(users) }}
        </div>

        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('admin_user_add') }}" class="btn btn-primary btn-sm">
                    {{ 'add_new_user_button_label'|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
