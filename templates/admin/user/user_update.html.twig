{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <h3 class="col-md-12">
                {% if userId %}{{ 'update_user_header'|trans }}{% else %}{{ 'add_new_user_header'|trans }}{% endif %}
            </h3>
        </div>
        <div class="row">
            <form class="form-horizontal" action="{{ userId ? path('admin_user_update', {'userId': userId})
                : path('admin_user_add') }}" method="post">
                <div class="form-group">
                    <div class="col-sm-12">
                        {{ form_errors(form) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.name, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.roleId, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        {{ form_widget(form.roleId) }}
                        {{ form_errors(form.roleId) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.twitterHandle, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        {{ form_widget(form.twitterHandle) }}
                        {{ form_errors(form.twitterHandle) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.password.first, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        {{ form_widget(form.password.first) }}
                        {{ form_errors(form.password.first) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.password.second, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        {{ form_widget(form.password.second) }}
                        {{ form_errors(form.password.second) }}
                    </div>
                </div>

                {{ form_rest(form) }}

                <div class="form-group form-buttons">
                    <div class="col-sm-offset-6 col-md-offset-4 col-sm-6 col-md-8">
                        <input type="submit" class="btn btn-primary m-r-sm" value="{{ 'form_save_button_label'|trans }}"/>
                        <a href="{{ path('admin_user_list') }}" class="btn btn-primary btn-outline">
                            {{ 'back_to_list_button_label'|trans }}
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
