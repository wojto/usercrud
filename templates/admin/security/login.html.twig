{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <h3 class="col-md-12">
                {{ 'Logowanie'|trans }}
            </h3>
        </div>

        {% if error %}
            <div class="row">
                <div class="col-md-12 alert alert-danger alert-dismissable main-alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <form novalidate name="form" class="form-horizontal" action="{{ path('admin_login') }}" method="post">
                <div class="form-group">
                    {{ form_label(form.username, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <input type="text" class="form-control" id="username" name="_username"
                               value="{{ lastUsername }}" required=""/>
                        {{ form_errors(form.username) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.password, null, {'label_attr' : {'class' : 'col-xs-12 col-sm-6 col-md-4'}}) }}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <input type="password" class="form-control" id="password" name="_password" required=""/>
                        {{ form_errors(form.password) }}
                    </div>
                </div>

                <div class="form-group form-buttons">
                    <div class="col-sm-offset-6 col-md-offset-4 col-sm-6 col-md-8">
                        <input type="submit" class="btn btn-primary m-r-sm" value="{{ 'Zaloguj'|trans }}"/>
                        <a href="{{ path('admin_homepage') }}" class="btn btn-primary btn-outline">
                            {{ 'Wróć do serwisu'|trans }}
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
